{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "echo 'Skipping install - done in build command'",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    },
    {
      "source": "/",
      "destination": "/frontend/dist/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}

